<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<section style="display: flex; justify-content: center;">
  <% if (user) { %>
    <div style="border: 1px solid rgb(159, 85, 85); text-align:center; border-radius: 5px;">
      <h1>Skate Spots:</h1>
      <form style="border: 10px solid rgb(136, 91, 91);" 
      action="/skatespots" method="POST">
      <label>
        Spot:
        <input type="text" name="name" autocomplete="off">
      </label>
      <label>
        Bust?:
        <input type="checkbox" name="bust">
      </label>
      <button type="submit">Add Spot</button>
    </form>
    <% } %>
    <h2>All Spots:</h2>
    <ul>
      <% skatespots.forEach(skatespot => { %>
        <li> 
          <a href="/skatespots/<%= skatespot._id %>"><%= skatespot.name %></a> is <%= skatespot.bust ? 'bust' : 'not a bust' %>
        </li>
        <% }) %>
      </ul>
    </div>
</section>
<%- include('../partials/footer') %>